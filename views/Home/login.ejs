<head>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
  <link rel="stylesheet" href="/public/css/login.css">
</head>
<%- include header.ejs %>

<section style="min-height: 30vh;">

</section>
<section id="login-section" class="login-section">

  <div class="container-fluid"> 
    <div class="row">

      <div class="col-md-6 order-md-2">

        <div class="login-image-wrapper">
          <img class="col-12 align-self-center" src="/public/img/login-R.png">
         
        </div>
      </div>


      <div class="col-md-6">
        <div class="login-form-wrapper">
                <img src="/public/img/login-avatar.png" alt="">
                <h1>Login Here</h1>
                
                <% if(message.length>2){ %>
                <small style="position: relative; left: 4px; text-transform: capitalize;"><%= message %></small>
                <%}%>

                <form action="/login" method="post" class="login-form">
                  

                  <div class="form-label-group">
                    <input type="text" id="inputEmail" class="form-control" name="mobileno"
                      placeholder="Email address / mobile no." required autofocus>

                  </div>
                  <div class="form-label-group mb-5">
                    <input type="password" id="inputPassword" name="password" class="form-control"
                      placeholder="Password" required>

                  </div>


                  <button class="btn btn-lg  btn-block btn-login text-uppercase font-weight-bold  mb-2"
                    type="submit">Login</button>
                  <div class="form-row">
                    <div class="col-lg-12">
                      <a href="/forgot-password" class="text-dark ml-4">Forgot password?</a><a href="/register"
                        class="text-danger mr-4" style="float:right;clear:left;">SIGNUP</a>
                    </div>
                  </div>
                </form>
          </div>
      </div>
      

     
    </div>
  </div>
</section>
<%- include footer.ejs %>