<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css">
<style>
    .form-gap {
        padding-top: 70px;
    }

    .makedisable {
        pointer-events: none;
        opacity: 0.4;
    }
</style>
<div class="form-gap"></div>
<div class="container">
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <div class="panel panel-default">
                <div class="panel-body">
                    <div class="text-center">
                        <h3><i class="fa fa-lock fa-4x"></i></h3>
                        <h2 class="text-center">Forgot Password?</h2>
                        <div class="panel-body">
                            <form id="register-form" role="form" autocomplete="off" class="form" method="post"
                                action="/forgot-password">
                                <div class="form-group">
                                    <div class="input-group">
                                        <span class="input-group-addon"><i
                                                class="glyphicon glyphicon-envelope color-blue"></i></span>
                                        <input id="email" name="email" placeholder="Enter your registered email id"
                                            class="form-control" type="email" onkeyup="checkemaill()">
                                    </div>
                                </div>
                                <p id="alert-email" class="msgalerts">you have email registered?</p>
                                <div class="form-group">
                                    <input name="recover-submit" id="done" class="btn btn-lg btn-primary btn-block"
                                        value="SUBMIT" type="submit">
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    function checkemaill() {
        data = {};
        data.email = document.getElementById("email").value;
        $.ajax({
            url: "/checkemail",
            method: "POST",
            data: JSON.stringify(data),
            contentType: 'application/json',
            success: function (response) {
                if (response == "yes") {
                    document.getElementById('alert-email').innerHTML = "";
                    document.getElementById('done').className = "btn btn-lg btn-primary btn-block";


                } else {

                    document.getElementById('alert-email').innerHTML = "check you have registered with email?";
                    document.getElementById('done').className = "btn btn-lg btn-primary btn-block makedisable";

                }
            }
        });
    }
</script>